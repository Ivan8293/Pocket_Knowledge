<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FactActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="83dp"
        android:backgroundTint="@color/white_2"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/MainButton"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/image"
                app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/button_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Главная" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/CatButton"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/img_1" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/button_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Категории" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/favorButton"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/img_2" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/button_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Избранное" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/button_menu"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/img_3" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/button_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Меню" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="410dp"
        android:layout_height="812dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fact_back" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/comfortaa"
        android:text="В древние времена серьги были исключительно мужским аксессуаром"
        android:textAlignment="center"
        android:textColor="#212121"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:width="188dp"
        android:height="60dp"
        android:backgroundTint="@color/orange_main"
        android:fontFamily="@font/roboto_bold"
        android:text="ПОДРОБНЕЕ"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.269"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.853" />

    <LinearLayout
        android:layout_width="71dp"
        android:layout_height="56dp"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="260dp"
        android:background="@drawable/button_orange_2"
        android:backgroundTint="@color/orange_main"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/icon5"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/planet_earth"
            app:srcCompat="@drawable/img" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>