<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="410dp"
        android:layout_height="812dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fact_back" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="83dp"
        android:backgroundTint="@color/white_2"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/MainButton"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/image" />

            <TextView
                android:id="@+id/button_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Главная" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/CatButton"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/img_1" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/button_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Категории" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/favorButton"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/img_2" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/button_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Избранное" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/button_menu"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/img_3" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/button_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Меню" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Категории"
        android:textColor="@color/black_2"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="410dp"
        android:layout_height="600dp"
        android:layout_marginTop="30dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="125dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/button_white"
            android:backgroundTint="@color/white_opacity"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_row="0">

            <ImageView
                android:id="@+id/icon7"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/handshake" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/button_text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Завязать диалог"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="125dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/button_white"
            android:backgroundTint="@color/white_opacity"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon8"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/laugh" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/button_text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Пошутить"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="125dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/button_white"
            android:backgroundTint="@color/white_opacity"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon9"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/in_love" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/button_text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Влюбить"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="125dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/button_white"
            android:backgroundTint="@color/white_opacity"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon10"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/wow" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/button_text10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Удивить"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="125dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/button_white"
            android:backgroundTint="@color/white_opacity"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon11"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/idea_exchange" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/button_text11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Блестнуть эредицией"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="125dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/button_white"
            android:backgroundTint="@color/white_opacity"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon12"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/talking" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Сгладить неловкое молчание"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="125dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/button_white"
            android:backgroundTint="@color/white_opacity"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon13"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/planet_earth" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/button_text13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Время путешествий"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="125dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/button_white"
            android:backgroundTint="@color/white_opacity"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon14"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/planet_earth"
                app:srcCompat="@drawable/history" />  <!-- Замените на ваш ресурс иконки -->

            <TextView
                android:id="@+id/button_text14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Исторические хроники"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>
